<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <TextView
        android:id="@+id/text_filter_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="Filter"
        android:textColor="@color/grey60"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/button_filter_pay_type"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:layout_marginStart="8dp"
        android:layout_weight="1"
        android:background="@drawable/box_filter_button"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:text="Pay Type"
        android:textSize="14sp"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:layout_constraintBaseline_toBaselineOf="@+id/text_filter_tag"
        app:layout_constraintStart_toEndOf="@+id/text_filter_tag"/>

</android.support.constraint.ConstraintLayout>